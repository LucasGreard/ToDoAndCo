{% extends 'base.html.twig' %}

{% block header_title %}
	<h1>Bienvenue sur Todo List, l'application vous permettant de gérer l'ensemble de vos tâches sans effort !</h1>
{% endblock %}

{% block body %}
	{% if is_granted('IS_AUTHENTICATED_FULLY') %}
		<div class="row">
			<a href="" class="btn btn-success">Créer une nouvelle tâche</a>
			<a href="" class="btn btn-info">Consulter la liste des tâches à faire</a>
			<a href="" class="btn btn-secondary">Consulter la liste des tâches terminées</a>
			{% if is_granted('ROLE_ADMIN') %}
				<a href="/user" class="btn btn-secondary">Voir les utilisateurs</a>
			{% endif %}
			<a href="/logout" class="btn btn-danger">Se déconnecter</a>
		</div>
	{% else %}
		<div class="row">
			<a href="/login" class="btn btn-success">Se connecter</a>
			<a href="/register" class="btn btn-info">S'inscrire</a>
		</div>
	{% endif %}


{% endblock %}
